<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>마이페이지</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
            crossorigin="anonymous">
    </head>
    <body>
        <%- include('nav.html') %>
        <!-- <%- include('mypage.html') %>  -->
        <ul class="mypage-group">
            <h1>내정보</h1><p></p>
            <!-- <li  class="list-group-item-myinfo"> -->
                <!-- <p>프로필: <img src="/public<%= mypageInfo[0].user_imageaddr %>" alt="없음"/> </p> -->
                
                <p>프로필: <img src= "<%= mypageInfo[0].user_imageaddr %>" alt="" width="300" height="300" border-radius: 50% /> </p>
                <p>이메일:<%= mypageInfo[0].user_email %> </p>
                <p>이름 <%= mypageInfo[0].user_name %></p>
                <p>닉네임 : <%= mypageInfo[0].user_nickname %></p>
                <p>전화번호 <%= mypageInfo[0].user_phonenumber %></p>
                <button class="update"><a href="/mypageInfo/edit/<%= mypageInfo[0].user_id%>">수정</a></button>
            <!-- </li> -->
           
        </ul>

        <ul class="myReview-group">
            <h1>내가 쓴 리뷰<h2><p></p>
            <% for (let i = 0; i < mypageReview.length; i++){ %>
                <li class="list-group-item-mycomment">
                    <p>술집 이름 : <%= mypageReview[i].shop_name%></p>
                    <p>리뷰내용 : <%= mypageReview[i].Field%></p>
                    <p>상점주소 : <%= mypageReview[i].shop_addr%></p>
                    <p>리뷰입력 날짜 : <%= mypageReview[i].reg_dtm%></p>
                    <button class="update"><a href="/mypageReview/edit/<%= mypageReview[i].shop_id%>">수정</a></button>
                </li>
            <% } %>
        </ul>

        <ul class="myComment-group">
            <h1>내가 쓴 댓글<h2><p></p>
            <% for (let i = 0; i < mypageComment.length; i++){ %>
                <li class="list-group-item-mycomment">
                    <p>술집 이름 : <%= mypageComment[i].shop_name%></p>
                    <p>상점주소 : <%= mypageComment[i].shop_addr%></p>
                    <p>댓글내용 : <%= mypageComment[i].contents%></p>
                    <p>댓글입력 날짜 : <%= mypageComment[i].reg_dtm%></p>
                    <p>점수 : <%= mypageComment[i].score%></p>
                    <button class="update"><a href="/mypageComment/edit/<%= mypageComment[i].comment_idx%>">수정</a></button>
                    <button class="delete"><a href="/mypageComment/delete/<%= mypageComment[i].comment_idx%>">삭제</a></button>
                </li>
                <% } %>
        </ul>

        <ul class="mycomment-group">
            <h1>내가 찜한 곳<h2><p></p>
            <% for (let i = 0; i < mypageCart.length; i++){ %>
                <li class="list-group-item-mycomment">
                    <p>술집 이름 : <%= mypageCart[i].shop_name%></p>
                    <p>상점주소 : <%= mypageCart[i].shop_addr%></p>
                    <p>리뷰입력 날짜 : <%= mypageCart[i].reg_dtm%></p>
                </li>
                <% } %>
        </ul>
        
    </body>
</html>